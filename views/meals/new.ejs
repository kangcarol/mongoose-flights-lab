<%- include('../partials/html-head')  %>
<link rel="stylesheet" href="/stylesheets/meals/new.css" />
<%- include('../partials/nav')  %>

<main>
  <h1><%= title %></h1>

  <form id="add-question-form" action="/questions" method="POST">
    <label for="name-input">Question:</label>
    <input type="text" name="text" id="text-input">
    <button class="btn btn-secondary" type="submit">Add Meal</button>
  </form>

  <p>Please first ensure that the meal is not in the list below!
    <ul>
      <% meals.forEach(function(meal) { %>
        <li><%= meal.name %></li>
      <% }) %>
    </ul>
  </p>
</main>


