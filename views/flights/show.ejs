<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
<h1><%= title %></h1>
<section>
  <div>Flight: </div>
  <div>
    <%= flight._id %>
    <a href="/flights/<%= flight._id %>/edit">
      <button>Edit Flight</button>
    </a>
  </div>
  <div>Airline: </div>
  <div><%= flight.airline %></div>
  <div>Airport: </div>
  <div><%= flight.airport %></div>
  <div>Flight No.: </div>
  <div><%= flight.flightNo %></div>
  <div>Departure: </div>
  <div><%= (flight.departs).toLocaleString()%></div>
  <div>Meals:</div>
  <ul>
    <% flight.meals.forEach(meal => { %>
      <li><%= meal.name %></li>
    <% }) %>
  </ul>
</section>

<form id="add-to-meals" action="/flights/<%= flight._id %>/meals " method="POST">

  <select name="mealId">
    <% meals.forEach(meal => { %>
      <option value="<%= meal._id %>"><%= meal.name %></option>
    <% }) %>
  </select>
  <button type="submit">Add to Meals</button>
</form>

<h2>Tickets</h2>
<form
  id="add-ticket-form"
  action="/flights/<%= flight._id %>/tickets"
  method="POST"
>
  <label for="content-textarea">Seat:</label>
  <input name="seat" required pattern="[A-F][1-9]\d?" id="content-textarea">

  <label for="price-area">Price:</label>
  <input name="price" type="number" id="price-area">

  <button type="submit">Add Ticket</button>
</form>

<% if (flight.tickets.length) { %>
  <table>
    <thead>
      <tr>
        <th>Ticket</th>
        <th>Created</th>
        <th>Seat</th>
        <th>Price</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
      <% flight.tickets.forEach(function(ticket) { %>
        <tr>
          <td><%= ticket._id %></td>
          <td><%= ticket.createdAt.toLocaleString() %></td>
          <td><%= ticket.seat %></td>
          <td><%= ticket.price %></td>
          <td>
            <form
            action="/flights/<%= flight._id %>/tickets/<%= ticket._id%>?_method=DELETE"
            class="delete-form"
            method="POST"
            >
            <button type="submit">delete</button>
          </form>
        </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
<% } else { %>
  <h3>No Tickets Yet</h3>
<% } %>


<%- include('../partials/footer') %>
